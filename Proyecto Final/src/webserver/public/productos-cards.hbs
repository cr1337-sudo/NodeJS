{{#if listExists}}
<br>
<div class="row row-cols-1 row-cols-md-5 g-4">
  {{#each productos}}
    <div class="col">
      <div class="card">
        <div class="card-header" style="background-color: #019e5d;">
          <h5 style="text-align: center; color:white"><strong>{{this.nombre}}</strong></h5>
        </div>
        <img src={{this.foto}} style="img-responsive;center-block" class="card-img-top" alt={{this.nombre}}>
        <div class="card-body">          
          <p class="card-text">{{this.descripcion}}</p>
          <ul>
            <li><strong>Precio: </strong>${{this.precio}}</li>
            <li><strong>Codigo: </strong>{{this.codigo}}</li>
            <li><strong>Stock: </strong>{{this.stock}}</li>            
          </ul>
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
              <button type="button" onclick="editProducto(this)" class="btn btn-success btn-sm mt-2" id="{{this.id}}">Actualizar</button>
              <button type="button" onclick="deleteProducto(this)" class="btn btn-danger btn-sm mt-2" id="{{this.id}}">Eliminar</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}} 
</div>
<br>

{{else}}
  <div class="card-body mt-5 bg-info bg-gradient d-flex align-items-center justify-content-center">
    No se ha ingresado ningun producto
  </div>
{{/if}}


